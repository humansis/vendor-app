<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/productsFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/screenBackgroundColor">

    <androidx.appcompat.widget.SearchView
        android:id="@+id/productsSearchBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_8dp"
        android:layout_marginBottom="@dimen/dimen_8dp"
        android:background="@drawable/background_cardviewlike"
        android:elevation="@dimen/cardview_default_elevation"
        app:theme="@style/SearchView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/productsRecyclerView" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/productsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/dimen_4dp"
        android:overScrollMode="never"
        android:scrollbars="none"
        android:transcriptMode="alwaysScroll"
        app:layout_constraintTop_toBottomOf="@id/productsSearchBar"
        app:layout_constraintBottom_toBottomOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/cartFAB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_32dp"
        android:src="@drawable/ic_shopping_cart"
        android:contentDescription="@string/add_to_cart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="@color/white"
        app:backgroundTint="@color/colorPrimaryDark"/>

    <TextView
        android:id="@+id/cartBadge"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:elevation="@dimen/dimen_16dp"
        android:background="@drawable/circle"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="@id/cartFAB"
        app:layout_constraintStart_toStartOf="@id/cartFAB"
        app:layout_constraintDimensionRatio="1:1"
        tools:text="1"/>

</androidx.constraintlayout.widget.ConstraintLayout>
