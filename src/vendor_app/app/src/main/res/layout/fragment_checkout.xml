<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightGrey">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/checkoutScreenLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.8"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        >
        <ScrollView
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:fillViewport="true">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

        <TextView
            android:id="@+id/productsTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/products"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/delimiterLayout"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/delimiterLayout"
            app:layout_constraintTop_toBottomOf="@id/productsTitleTextView"
            android:layout_marginTop="20dp"
            android:orientation="vertical">


            <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/lightGrey">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintWidth_max="30dp"
                    app:layout_constraintWidth_percent="0.15"
                    app:layout_constraintDimensionRatio="1:1"
                    android:shape="ring"
                    app:cardCornerRadius="15dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/productInfoTextView"
                    app:layout_constraintBottom_toBottomOf="@id/productInfoTextView"
                    android:layout_marginStart="10dp">

                    <ImageView
                        android:id="@+id/productImageView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/icon"
                        android:layout_gravity="center"/>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/productInfoTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintWidth_max="250dp"
                    app:layout_constraintWidth_percent="0.50"
                    android:text="Cucumber and Bread and Eggs"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    app:layout_constraintStart_toEndOf="@id/cardView"
                    app:layout_constraintEnd_toStartOf="@id/priceTextView"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:id="@+id/amountTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/productInfoTextView"
                    app:layout_constraintStart_toStartOf="@id/productInfoTextView"
                    android:layout_marginTop="2dp"
                    android:text="1 Kg"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/priceTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintWidth_max="100dp"
                    app:layout_constraintWidth_percent="0.30"
                    android:text="100 SYP"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/productInfoTextView"
                    app:layout_constraintBottom_toBottomOf="@id/amountTextView"
                    android:layout_marginStart="10dp" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

        <!--delimiter-->
        <LinearLayout
            android:id="@+id/delimiterLayout"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/vouchersTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/vouchers"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/delimiterLayout"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/delimiterLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/vouchersTitleTextView"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:id="@+id/scanLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:paddingBottom="80dp">

                <com.google.android.material.button.MaterialButton
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/lightGrey"
                    app:strokeColor="@color/colorPrimaryDark"
                    app:strokeWidth="1dp"
                    android:elevation="2dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="@string/clickHereToScan"
                    app:iconTint="@color/colorPrimaryDark"
                    app:icon="@drawable/photo_camera"
                    android:layout_marginEnd="10dp"
                    />
                <TextView
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:text="@string/pleaseScanVoucher"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textAlignment="center"
                    android:layout_marginStart="10dp"/>
            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent">

                <ImageView
                    android:id="@+id/moneyIconImageView"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:tint="@color/red"
                    android:src="@drawable/attach_money"

                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginStart="10dp"/>

                <TextView
                    android:id="@+id/totalTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/total"
                    android:layout_toRightOf="@id/moneyIconImageView"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/red"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@id/moneyIconImageView"
                    app:layout_constraintTop_toTopOf="@id/moneyIconImageView"
                    app:layout_constraintBottom_toBottomOf="@id/moneyIconImageView"
                    android:layout_marginStart="10dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/red"
                    android:textStyle="bold"
                    android:text="125 SYP"

                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/totalTextView"
                    android:layout_marginEnd="20dp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <RelativeLayout
        android:id="@+id/checkoutScreenButtonsLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/checkoutScreenLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="10dp"
        >
        <com.google.android.material.button.MaterialButton
            android:id="@+id/cancelButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/cancel"
            android:textColor="@color/white"
            android:backgroundTint="@color/red"
            android:layout_toLeftOf="@id/proceedButton"
            android:layout_marginRight="10dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/proceedButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/proceed"
            android:textColor="@color/white"
            android:backgroundTint="@color/green"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            />


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
