<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/shoppingCartFragment"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/lightGrey"
    android:orientation="vertical"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:paddingLeft="5dp">

    <!-- Header -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ProductDetailHeader"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">


        <androidx.cardview.widget.CardView
            android:id="@+id/productCardView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:visibility="visible"
            >
            <androidx.appcompat.widget.AppCompatImageView
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/login_screen"
                android:adjustViewBounds="true"
                android:visibility="visible"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/productName"
            app:layout_constraintStart_toEndOf="@id/productCardView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/cartButtonImageView"
            android:layout_marginEnd="40sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:text="Lentils dsf adsf adsf"
            android:paddingLeft="10dp"
            android:ellipsize="end"
            android:singleLine="true" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/cartButtonImageView"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/add_shopping_cart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:tint="@color/colorPrimary"
            android:layout_marginEnd="20dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Quantity -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/cartImageView"
            app:layout_constraintWidth_max="30dp"
            app:layout_constraintWidth_percent="0.1"
            android:layout_width="0dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/shopping_cart"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="5dp"
            app:layout_constraintTop_toTopOf="@id/quantityTextInputLayout"
            android:layout_marginTop="10dp"
            app:layout_constraintBottom_toBottomOf="@id/quantityTextInputLayout" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/quantityTextInputLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintWidth_percent="0.5"
            app:layout_constraintStart_toEndOf="@id/cartImageView"
            android:layout_marginStart="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxStrokeColor="@color/colorPrimary">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/quantityEditText"
                android:imeOptions="flagNoExtractUi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/quantity"
                android:singleLine="true"
                android:nextFocusDown="@+id/unitPriceEditText"
                android:inputType="numberDecimal" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/quantityUnitTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/quantityUnit"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@id/quantityTextInputLayout"
            app:layout_constraintTop_toTopOf="@id/quantityTextInputLayout"
            app:layout_constraintStart_toEndOf="@id/quantityTextInputLayout"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="5dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Price -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/moneyImageView"
            app:layout_constraintWidth_max="30dp"
            app:layout_constraintWidth_percent="0.1"
            android:layout_width="0dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/monetization_on"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/unitPriceTextInputLayout"
            android:layout_width="0dp"
            app:layout_constraintWidth_percent="0.5"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/moneyImageView"
            android:layout_marginStart="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxStrokeColor="@color/colorPrimary"
>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/unitPriceEditText"
                android:imeOptions="flagNoExtractUi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/unitPrice"
                android:singleLine="true"
                android:inputType="numberDecimal"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <Spinner
            android:id="@+id/priceUnitSpinner"
            android:layout_width="0dp"
            android:layout_height="40dp"
            app:layout_constraintStart_toEndOf="@id/unitPriceTextInputLayout"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/spinner_currency_background"
            android:popupBackground="@color/lightGrey"
            app:layout_constraintWidth_max="wrap"
            app:layout_constraintWidth_percent="0.3"
            />

        <TextView
            android:id="@+id/priceUnitTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/unitPriceTextInputLayout"
            app:layout_constraintBottom_toBottomOf="@id/unitPriceTextInputLayout"
            app:layout_constraintTop_toTopOf="@id/unitPriceTextInputLayout"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="5dp"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:text="EUR" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>
