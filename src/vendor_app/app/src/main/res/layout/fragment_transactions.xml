<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/screenBackgroundColor"
    android:orientation="vertical">

    <!-- nevim jestli bude jako recycler a invoice nebo jen jedna tabulka-->

    <include
        android:id="@+id/unsynced_warning"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/transactions_title"
        layout="@layout/item_warning"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/transactions_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/unsynced_warning"
        android:textColor="@color/black"
        style="@style/FragmentTitle"
        android:text="@string/transactions_to_reimburse"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/transactions_title"
        app:layout_constraintBottom_toBottomOf="parent">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_16dp"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/shadow_top"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/transactionsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:overScrollMode="never"
            android:scrollbars="none"
            android:transcriptMode="alwaysScroll"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/shadow_bottom"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
