<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/categoryLayout"
    android:layout_width="72dp"
    android:layout_height="72dp"
    android:layout_marginHorizontal="@dimen/dimen_4dp"
    android:layout_marginBottom="@dimen/dimen_8dp"
    android:elevation="@dimen/cardview_default_elevation"
    android:background="@drawable/background_cardviewlike_category">

    <ImageView
        android:id="@+id/categoryImage"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/dimen_8dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:src="@drawable/ic_launcher_foreground" />

    <View
        android:id="@+id/categoryForeground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/foreground_cardviewlike_category" />

    <TextView
        android:id="@+id/categoryName"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_16dp"
        android:layout_marginVertical="@dimen/dimen_16dp"
        android:textColor="@color/darkerBlue"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="@dimen/fragment_text"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="Tinned Pulses" />

</androidx.constraintlayout.widget.ConstraintLayout>
