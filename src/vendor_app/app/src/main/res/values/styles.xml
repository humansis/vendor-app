<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="subtitleTextColor">@color/black</item>
        <item name="android:textColorHint">@color/darkGrey</item>
        <item name="actionBarTheme">@style/AppTheme.ActionBarTheme</item>
        <item name="popupMenuStyle">@style/PopupMenuTheme</item>
    </style>

    <style name="AppTheme.ActionBarTheme" parent="@style/ThemeOverlay.MaterialComponents.ActionBar">
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorControlNormal">@color/black</item>
    </style>

    <style name="Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Toolbar.Subtitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="DialogButton" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/dialog_button_color</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/white</item>
        <item name="android:buttonBarButtonStyle">
            @style/Widget.MaterialComponents.Button.TextButton
        </item>
        <item name="android:buttonBarPositiveButtonStyle">
            @style/DialogButton
        </item>
        <item name="android:buttonBarNegativeButtonStyle">
            @style/DialogButton
        </item>
        <item name="android:buttonBarNeutralButtonStyle">
            @style/DialogButton
        </item>
    </style>

    <style name="SuccessDialogTheme" parent="DialogTheme">
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="PopupMenuTheme" parent="@android:style/Widget.PopupMenu">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="NavigationView">
        <item name="android:textColorSecondary">@color/black</item>
    </style>

    <style name="FragmentTitle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/fragment_big_title</item>
        <item name="android:textAlignment">center</item>
        <item name="android:padding">@dimen/dimen_32dp</item>
    </style>

    <style name="WarningText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/fragment_title</item>
        <item name="android:textAlignment">center</item>
        <item name="android:padding">@dimen/dimen_16dp</item>
    </style>

    <style name="WarningButton" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconTint">@color/material_button_color</item>
        <item name="strokeColor">@color/material_button_color</item>
        <item name="android:textColor">@color/material_button_color</item>
    </style>

    <style name="SearchView" parent="Widget.AppCompat.SearchView">
        <!-- Query Text Color -->
        <item name="android:textColorPrimary">@color/colorPrimaryDark</item>
        <!-- Icon Color -->
        <item name="android:tint">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
    </style>

    <style name="SquareFAB">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>


</resources>
